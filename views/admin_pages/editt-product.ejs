    <script>
        document.addEventListener("DOMContentLoaded", function () {
        const nameInput = document.getElementById('name');
        const errorName = document.getElementById('errorName');
        const quantityInput = document.getElementById('quantity');
        const errorQuantity = document.getElementById('errorQuantity');
        const statusSelect = document.getElementById('status');
        const errorStatus = document.getElementById('errorStatus');
        const priceInput = document.getElementById('price');
        const errorPrice = document.getElementById('errorPrice');
        const discountInput = document.getElementById('discount');
        const errorDiscount = document.getElementById('errorDiscount');
    
        nameInput.addEventListener("input", function (event) {
            validateInput(event, errorName, "Product title");
        });
    
        quantityInput.addEventListener("input", function (event) {
            validateInput(event, errorQuantity, "Quantity");
        });
    
        statusSelect.addEventListener("change", function (event) {
            validateInput(event, errorStatus, "Status");
        });
    
        priceInput.addEventListener("input", function (event) {
            validateInput(event, errorPrice, "Cost in INR");
        });
    
        discountInput.addEventListener("input", function (event) {
            validateInput(event, errorDiscount, "Discount");
        });
    
        function validateInput(event, errorElement, fieldName) {
            const enteredValue = event.target.value;
            if (enteredValue.trim() === "") {
                errorElement.textContent = fieldName + " cannot be empty";
                errorElement.style.display = "block";
                event.target.style.border = "1px solid red";
            } else {
                errorElement.textContent = "";
                errorElement.style.display = "none";
                event.target.style.border = "";
            }
        }
    });
    
    </script>
