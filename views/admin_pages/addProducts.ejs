                </ul>
            </div>
        </header>

        <section class="content-main">
            <form class="full-width-form" action="/admin/addProduct" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-6">
                        <div class="content-header">
                            <h2 class="content-title">Add New Product</h2>
                            <% if (typeof msg !=='undefined' ) { %>
                                <h6 style="color:#1ea344;">
                                    <%= msg %>
                                </h6><br><br><br>
                                <% } %>
                                    <div>
                                        <button class="btn btn-md rounded font-sm hover-up"
                                            type="submit">Publich</button>
                                    </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> General info</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Product title</label>
                                            <input required type="text" placeholder="Type here" class="form-control"
                                                name="name" id="productName">
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorProductName"></small>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Quantity</label>
                                            <input type="number" required placeholder="Type here" class="form-control"
                                                name="quantity" id="productQuantity" min="0" rows="4">
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorProductQuantity"></small>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Status</label>
                                            <select required name="status" class="form-select" id="productStatus">
                                                <option> Available </option>
                                                <option> Disabled </option>
                                            </select>
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorProductStatus"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>Pricing</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Cost in INR</label>
                                            <input type="number" required name="price" placeholder="0000.0"
                                                class="form-control" id="productPrice" min="0">
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorProductPrice"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> Discount (in %)</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label"></label>
                                            <input type="number" required name="discount" placeholder="Enter discount percentage"
                                                class="form-control" id="productDiscount" min="0" max="100">
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorProductDiscount">Discount must be between 0 and 99</small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> Description</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Product Description</label>
                                            <textarea required placeholder="Type here" class="form-control"
                                                name="description" id="productDescription" rows="4"></textarea>
                                            <small class="form-text text-left" style="color: red; display: none;"
                                                id="errorProductDescription"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->

                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>Category</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <% catogories.forEach(category=> { %>
                                                <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                                    <input required value="<%= category._id%>" class="form-check-input"
                                                        name="categoryid" type="radio">
                                                    <span class="form-check-label">
                                                        <%= category.name %>
                                                    </span>
                                                </label>
                                                <% }); %>
                                                    <small class="form-text text-left"
                                                        style="color: red; display: none;"
                                                        id="errorProductCategory"></small>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> Media</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">
                                                <h6>Images</h6>
                                            </label><br>
                                            <!-- Ensure the names match the fields expected by Multer -->
                                            Main <input type="file" id="main" name="image" accept="image/*"
                                                required><br>
                                            Back <input type="file" id="back" name="image" accept="image/*"
                                                required><br>
                                            Side <input type="file" id="side" name="image" accept="image/*"
                                                required><br>
                                        </div>
                                    </div> <!-- .row end// -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                        document.write(new Date().getFullYear())
                    </script> ©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
    const productNameInput = document.getElementById('productName');
    const errorProductName = document.getElementById('errorProductName');
    const productQuantityInput = document.getElementById('productQuantity');
    const errorProductQuantity = document.getElementById('errorProductQuantity');
    const productStatusSelect = document.getElementById('productStatus');
    const errorProductStatus = document.getElementById('errorProductStatus');
    const productPriceInput = document.getElementById('productPrice');
    const errorProductPrice = document.getElementById('errorProductPrice');
    const productDiscountInput = document.getElementById('productDiscount');
    const errorProductDiscount = document.getElementById('errorProductDiscount');
    const productCategoryInput = document.getElementsByName('categoryid');
    const errorProductCategory = document.getElementById('errorProductCategory');

    productNameInput.addEventListener("input", function (event) {
        validateInput(event, errorProductName, "Product title");
    });

    productQuantityInput.addEventListener("input", function (event) {
        validateQuantity(event, errorProductQuantity, "Quantity");
    });

    productStatusSelect.addEventListener("change", function (event) {
        validateInput(event, errorProductStatus, "Status");
    });

    productPriceInput.addEventListener("input", function (event) {
        validatePrice(event, errorProductPrice, "Cost in INR");
    });

    productDiscountInput.addEventListener("input", function (event) {
        validateDiscount(event, errorProductDiscount, "Discount");
    });

    productCategoryInput.forEach(function (categoryInput) {
        categoryInput.addEventListener("change", function (event) {
            validateInput(event, errorProductCategory, "Category");
        });
    });

    function validateInput(event, errorElement, fieldName) {
        const enteredValue = event.target.value;
        if (enteredValue.trim() === "") {
            errorElement.textContent = fieldName + " cannot be empty";
            errorElement.style.display = "block";
            event.target.style.border = "1px solid red";
        } else {
            errorElement.textContent = "";
            errorElement.style.display = "none";
            event.target.style.border = "";
        }
    }

    function validateQuantity(event, errorElement, fieldName) {
        const enteredValue = parseInt(event.target.value);
        if (enteredValue <= 0) {
            errorElement.textContent = fieldName + " must be greater than zero";
            errorElement.style.display = "block";
            event.target.style.border = "1px solid red";
        } else {
            errorElement.textContent = "";
            errorElement.style.display = "none";
            event.target.style.border = "";
        }
    }

    function validatePrice(event, errorElement, fieldName) {
        const enteredValue = parseFloat(event.target.value);
        if (enteredValue <= 0) {
            errorElement.textContent = fieldName + " must be greater than zero";
            errorElement.style.display = "block";
            event.target.style.border = "1px solid red";
        } else {
            errorElement.textContent = "";
            errorElement.style.display = "none";
            event.target.style.border = "";
        }
    }

    function validateDiscount(event, errorElement, fieldName) {
        const enteredValue = parseFloat(event.target.value);
        if (enteredValue < 0 || enteredValue >= 100) {
            errorElement.textContent = "Discount must be between 0 and 99";
            errorElement.style.display = "block";
            event.target.style.border = "1px solid red";
        } else {
            errorElement.textContent = "";
            errorElement.style.display = "none";
            event.target.style.border = "";
        }
    }
});

    </script>
    <script src="js/vendors/jquery-3.6.0.min.js"></script>
    <script src="js/vendors/bootstrap.bundle.min.js"></script>
    <script src="js/vendors/select2.min.js"></script>
