        <section class="content-main">
            <form class="full-width-form" action="/admin/addProduct" method="post" enctype="multipart/form-data">                <div class="row">
                    <div class="col-6">
                        <div class="content-header">
                            <h2 class="content-title">Add New Product</h2>
                            <% if (typeof msg !=='undefined' ) { %>
                                <strong style="color:#1ea344;">
                                    <%= msg %>
                                </strong><br><br><br>
                                <% } %>
                                    <div>
                                        <button class="btn btn-md rounded font-sm hover-up"
                                            type="submit">Publich</button>
                                    </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> General info</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Product title</label>
                                            <input required type="text" placeholder="Type here" class="form-control"
                                                name="name">
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Quantity</label>
                                            <input type="number" required placeholder="Type here" class="form-control"
                                                name="quantity" min="0" rows="4"></input>
                                        </div>
                                        <div class="mb-4">
                                            <label class="form-label">Staus</label>
                                            <select required name="status" class="form-select">
                                                <option> Available </option>
                                                <option> Disabled </option>
                                            </select>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>Pricing</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">Cost in INR</label>
                                            <input type="number" required name="price" placeholder="0000.0"
                                                class="form-control" min="0">
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> Discount</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label"></label>
                                            <input type="number" required name="discount" placeholder="0000.0"
                                                class="form-control" min="0">
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6>Category</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <% catogories.forEach(category=> { %>
                                                <label class="mb-2 form-check form-check-inline" style="width: 45%;">
                                                    <input required value="<%= category._id%>" class="form-check-input"
                                                        name="categoryid" type="radio">
                                                    <span class="form-check-label">
                                                        <%= category.name %>
                                                    </span>
                                                </label>
                                                <% }); %>
                                        </div>
                                    </div> <!-- col.// -->
                                </div> <!-- row.// -->
                                <hr class="mb-4 mt-0">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h6> Media</h6>
                                    </div>
                                    <div class="col-md-9">
                                        <div class="mb-4">
                                            <label class="form-label">
                                                <h6>Images</h6>
                                            </label><br>
                                           <!-- Ensure the names match the fields expected by Multer -->
                                            Main <input type="file" id="main" name="mainImage" accept="image/*" required>
                                            Back <input type="file" id="back" name="backImage" accept="image/*" required>
                                            Side <input type="file" id="side" name="sideImage" accept="image/*" required><br>
                                                                                    
                                        </div>
                                    </div> <!-- .row end// -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
