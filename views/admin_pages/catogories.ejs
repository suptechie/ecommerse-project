            align-items: center;
            opacity: 0;
            animation: fadeIn 0.8s ease-in-out forwards;
            transition: transform 0.3s ease-in-out;
        }

        .user-details-container:hover {
            transform: scale(1.02);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        ul {
            list-style: none;
            padding: 0;
            margin-right: 20px;
