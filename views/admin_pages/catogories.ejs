                    <h2 class="content-title card-title">Categories</h2>
                    <strong>no. Categories: <%= categories.length %></strong>
                </div>

                <div>
                    <button class="btn btn-primary" data-bs-target="#editUserModal" data-bs-toggle="modal">
                        <i class="material-icons md-plus"></i> Create new
                    </button>
                    <% if (typeof msg !=='undefined' ) { %>
                        <h6 style="color: #ff0000">
                            <%= msg %>
                        </h6>
                        <% } %>
                </div>
            </div>

            <% categories.forEach(function(category) { %>
                <div class="user-details-container">
                    <ul>
                        <li>
                            <h3>
                                <%= category.name %>
                            </h3>
                        </li>
                        <li>
                            <strong>
                                <%= category.description %>
                            </strong>
                        </li>
                        <li>
                            <strong> Collections: <%= category.items.length %></strong>
                        </li>
                        <li>
                            <ul>
                                <% category.items.forEach(function(item,index) { %>
                                    <li>
                                    <li>
                                        <span class="custom-link-style" >
                                            <h6>
                                                <a href="/admin/editProduct?id=<%= item._id %>&&type=cat"><%= index + 1 %>. <%= item.name %></a>
                                            </h6>
                                        </span>
                                    </li>

                        </li>
                        <% }); %>
                    </ul>
                    </li>
                    <button class="btn btn-primary" data-bs-target="#editCategoryModal<%= category._id %>"
                        data-bs-toggle="modal">
                        Edit
                    </button>
                    <a href="javascript:void(0);" 
                            <% if (category.items.length>0) { %> onclick="showToastr();" <% } else { %> onclick="confirmDelete('<%= category._id %>');" <% } %>
                            class="btn btn-danger">Delete</a>
                                     </ul>
                    <img <% if (category.img.length> 23) { %>
                    src="<%= category.img %>"
                    <% } else { %>
                        src="/resized_images/<%= category.img %>"
                            <% } %>
                                alt="<%= category.name %> Image" class="small-image"
                                    />

                                    <div class="user-details-buttons"></div>

                </div><br>

                <div class="modal fade" id="editCategoryModal<%= category._id %>" aria-hidden="true"
                    aria-labelledby="editUserModalLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="editUserModalLabel">
                                    Edit Category
                                </h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form action="/admin/editCatogories/<%= category._id %>" method="post" enctype="multipart/form-data">
                                    <div>
                                        <a href="/admin/addProduct" class="btn btn-primary"><i class="material-icons md-plus"></i>new Product to this catogory</a>
                                    </div>
                                    <div class="mb-3">
                                        <label for="name" class="form-label">Name</label>
                                        <input type="text" class="form-control" id="name" name="name" required value="<%= category.name %>" />
                                    </div>
                                
                                    <div class="mb-3">
                                        <img 
                                            <% if (category.img.length > 23) { %>
                                                src="<%= category.img %>"
                                            <% } else { %>
                                                src="/resized_images/<%= category.img %>"
                                            <% } %>
                                            alt="<%= category.name %> Image" class="small-image" 
                                        />
                                
                                        <label for="file" class="form-label">Image Path</label>
                                        <input type="file" class="form-control" id="file" name="file"  />
                                    </div>
                                    <section>
                                        <div class="mb-3">
                                            <label for="categoryType" class="form-label">Category Type</label>
                                            <select class="form-control" id="categoryType" name="type">
                                                <option value="men" <% if (category.type === 'men') { %>selected<% } %>>Men</option>
                                                <option value="women" <% if (category.type === 'women') { %>selected<% } %>>Women</option>
                                                <option value="children" <% if (category.type === 'children') { %>selected<% } %>>Children</option>
                                            </select>
                                        </div>
                                
                                    <div class="mb-3">
                                        <label for="description" class="form-label">Description</label>
                                        <input type="text" class="form-control" id="description" name="description" required value="<%= category.description %>" />
                                    </div>
                                    <strong>To Edit Products</strong>
                                    <% category.items.forEach(function(item,index) { %>
                                        
                                            <a class="custom-link-style" href="/admin/editProduct?id=<%= item._id %>&&type=hnjnh">
                                                <h6>
                                                    <%= index + 1 %>. <%= item.name %>
                                                </h6>
                                            </a>
                            <% }); %>
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>

                    <div class="pagination-area mt-15 mb-50">
