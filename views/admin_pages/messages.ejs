        <style>
        /* Style for the dialog overlay */
        dialog::backdrop {
            background-color: rgba(0, 0, 0, 0.5);
            /* Semi-transparent black background */
        }
        
        /* Style for the dialog itself */
        dialog {
            border: none;
            /* Remove default dialog border */
            background-color: #fff;
            /* White background */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            /* Drop shadow */
            width: 300px;
            /* Set width */
            border-radius: 10px;
            /* Rounded corners */
            padding: 20px;
            /* Padding inside the dialog */
        }
    
        /* Style for the close button */
        #close-dialog {
            position: absolute;
            top: 10px;
            right: 10px;
            background: none;
            border: none;
            cursor: pointer;
            font-size: 20px;
            color: #888;
        }
    
        /* Style for the form inside the dialog */
        #reply-dialog form {
            display: flex;
            flex-direction: column;
        }
    
        /* Style for the input fields and textarea */
        #reply-dialog input,
        #reply-dialog textarea {
            margin-bottom: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 14px;
        }
    
        /* Style for the submit button */
        #reply-dialog button[type="button"] {
            padding: 10px 20px;
            background-color: #007bff;
            /* Blue color */
            color: #fff;
            /* White text */
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
        }
    
        /* Style for the submit button on hover */
        #reply-dialog button[type="button"]:hover {
            background-color: #0056b3;
            /* Darker blue color */
        }
    </style>
        <section class="content-main" id="messagessection">
            <header>
                <h2 class="section-title">Messages</h2>
            </header>

            <div class="card">
                <header class="card-header">
                    <div class="row gx-3">
                        <div class="col-lg-2 col-6 col-md-3">
                            <select class="form-select" onchange="messageSort(event)">
                                <option value="pending" <%=sort=='pending' ?'selected':'' %>>Pending</option>
                                <option value="resolved" <%=sort=='resolved' ?'selected':'' %>>Resolved</option>
                                <option value="closed" <%=sort=='closed' ?'selected':'' %>>Closed</option>
                            </select>
                        </div>
                    </div>

                </header>


                <div class="card-body">
                    <div class="message-list">

                        <div class="accordion" id="accordionExample">
                            <% messages.forEach((msg, i)=> { %>
                                <div class="accordion-item">
                                    <h2 class="accordion-header">
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse"
                                            data-bs-target="#collapse<%= i %>" aria-expanded="false"
                                            aria-controls="collapse<%= i %>">
                                            <%= msg.userId.name %>
                                        </button>
                                    </h2>
                                    <div id="collapse<%= i %>" class="accordion-collapse collapse"
                                        data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                           <h6> user:</h6>
                                            <p><strong>Email:</strong><%= msg.email %> <br>
                                            <strong>Message:</strong><%= msg.message %> <br>
                                            <code><%= formatTime(msg.sendTime) %></code>
                                            </p>
                                            <% if (msg.status ==='closed') { %>
                                             <p>
                                                <hr>
                                                <h6>admin:</h6>
                                                <strong>Message:</strong><%= msg.message %> <br>
                                                <code><%= formatTime(msg.replayTime) %></code>
                                                <hr>
                                                seened at
                                                <code><%= formatTime(msg.replayTime) %></code>
                                             </p>
                                            <% } %>
                                            <!-- Reply button -->
                                           <% if (msg.status==='pending') { %>
                                            <button class="btn btn-primary reply-btn" data-email="<%= msg.email %>"
                                                data-id="<%= msg._id %>">Reply</button>
                                           <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                                    <% function formatTime(time) { %>
                                        <%= new Date(time).toLocaleTimeString([], { hour: '2-digit' , minute: '2-digit' }) %>
                                    <% } %>
                        </div>


                        <dialog id="reply-dialog">
                            <div>
                                <form id="messageForm">
                                    <input type="email" name="email" id="reply-email" readonly>
                                    <input type="hidden" name="id" id="reply-id">
                                    <small id="msg" style="color: red;display: none;">Please enter the message</small>
                                    <textarea name="message" id="reply-message"></textarea>
                                    <button id="sendmsg" type="button">Send</button>
                                </form>
                            </div>
                        </dialog>

                        <script>
                            document.addEventListener('DOMContentLoaded', function () {
                                var replyButtons = document.querySelectorAll('.reply-btn');
                                var dialog = document.getElementById('reply-dialog');
                                var emailInput = document.getElementById('reply-email');
                                var idInput = document.getElementById('reply-id');

                                replyButtons.forEach(function (button) {
                                    button.addEventListener('click', function () {
                                        var email = this.dataset.email;
                                        var id = this.dataset.id;
                                        emailInput.value = email;
                                        idInput.value = id
                                        dialog.showModal();
                                    });
                                });

                                dialog.addEventListener('close', function () {
                                    this.querySelector('form').reset();
                                });

                                // Close dialog when clicking outside of it
                                window.addEventListener('click', function (event) {
                                    if (event.target == dialog) {
                                        dialog.close();
                                    }
                                });
                            });

                            $(document).ready(function () {
                                $('#sendmsg').click(function () {
                                    var reply = $('#reply-message').val().trim();
                                    if (!reply) {
                                        $('#msg').show();
                                        return;
                                    }
                                    $.ajax({
                                        url: "/admin/send-reply",
                                        method: "POST",
                                        data: $("#messageForm").serialize(),
                                        success: (res) => {
                                            document.getElementById("reply-dialog").close()
                                            Swal.fire({
                                                icon: "success",
                                                title: "Message Sent",
                                                text: "Your message has been successfully sent.",
                                            });
                                            $("#accordionExample").html($(res).find("#accordionExample").html())
                                        },
                                        error: (err) => {
                                            document.getElementById("reply-dialog").close()
                                            Swal.fire({
                                                icon: "error",
                                                title: "Oops...",
                                                text: "There was an error sending your message. Please try again later.",
                                            });
                                            console.log('Error in replying:', err.message);
                                        }
                                    });
                                });
                            });





                            async function messageSort(event) {
                                try {
                                    const res = await $.ajax({
                                        url: "/admin/messages",
                                        method: "GET",
                                        data: {
                                            sort: event.target.value
                                        }
                                    })
                                    $("#messagessection").html($(res).find("#messagessection").html())
                                } catch (error) {
                                    console.log('errror in sort ', error.message);
                                }
                            }
                        </script>


