                </li>
               
            <br>
            <br>
        </nav>
    </aside>

    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
                
            </div>
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"> <i class="material-icons md-apps"></i> </button>
                <ul class="nav"> 
                    <li class="dropdown nav-item">                        
                            <a class="dropdown-item text-danger" href="/admin/logout"><i
                                    class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

      

        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Dashboard </h2>
                    <p>Whole data about business here</p>
                </div>
                <button id="Open" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Create
                    report</button>
            </div>

            <dialog class="custom-dialog">
                <div class="dialog-content">
                    <form method="post" action="/admin/get-report-pdf/weekly">
                        <button class="btn btn-primary">This Week Sales <span style="color: black;">(PDF)</span></button>
                    </form>
                    <form method="post" action="/admin/get-report-pdf/monthly">
                        <button class="btn btn-primary">This Month Sales <span style="color: black;">(PDF)</span></button>
                    </form>
                    <button id="close" class="btn btn-danger">Close</button>
                </div>
            </dialog>
             
            <div class="row">
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-primary-light"><i
                                    class="text-primary material-icons md-monetization_on"></i></span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Revenue</h6>
                                <span>₹<%= totalRevenue||0 %></span>
                                <span class="text-sm">
                                    Shipping fees are not included
                                </span>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-success-light"><i
                                    class="text-success material-icons md-local_shipping"></i></span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Orders</h6> <span>
                                    <%= totalorder||0 %>
                                </span>
                                <span class="text-sm">
                                    Excluding orders in transit
                                </span>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-warning-light"><i
                                    class="text-warning material-icons md-qr_code"></i></span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Products</h6> <span>
                                    <%= availableproducts||0 %>
                                </span>
                                <span class="text-sm">
                                    In <%= catagery||0 %> Categories
                                </span>
                            </div>
                        </article>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card card-body mb-4">
                        <article class="icontext">
                            <span class="icon icon-sm rounded-circle bg-info-light"><i
                                    class="text-info material-icons md-shopping_basket"></i></span>
                            <div class="text">
                                <h6 class="mb-1 card-title">Monthly Earning</h6>
                                <span>₹<%= monthlySales[0] ? monthlySales[0].total : 0 %></span>
                                </span>
                                <span class="text-sm">
                                    Based in your local time.
                                </span>
                            </div>
                        </article>
                    </div>
                </div>
            </div>

<% if (reportErr=='false') { %>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
            try {
                new Swal("Sorry!", 'Error in generating report', 'error'); // Display as a warning
            } catch (error) {
                console.log(error);
            }
        </script>
<% } %>

            <div class="row">
                <div class="col-xl-8 col-lg-12">
                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title">Sale statistics</h5>
                            <canvas id="myChart" height="120px"></canvas>
                        </article>
                    </div>
                    <div class="row">
                       
                        <div class="col-lg-7" >
                            <div class="card mb-4">
                                <article class="card-body">
                                    <h5 class="card-title">Top 10 Products</h5>
                                    <ul class="verti-timeline list-unstyled font-sm">
                                        <% mostSaledProducts.forEach(product=> { %>
                                            <li class="event-list">
                                                <div class="event-timeline-dot">
                                                    <a href="/admin/editProduct?id=<%= product._id %>"><i
                                                            class="material-icons md-play_circle_outline font-xxl"></i></a>
                                                </div>
                                                <div class="media">
                                                    <div class="me-3">
                                                        <h6><span>
                                                                <%= product.sales||0 %> sales
                                                            </span> <i
                                                                class="material-icons md-trending_flat text-brand ml-15 d-inline-block"></i>
                                                        </h6>
                                                    </div>
                                                    <div class="media-body">
                                                        <div>
                                                            <%= product.name||"N/A" %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                            <% }) %>

                                    </ul>
                                </article>
                            </div>
                        </div>

                        <div class="col-lg-5">
                            <div class="card mb-4">
                                <article class="card-body">
                                    <h5 class="card-title">Complaints</h5>
                                    <div class="new-member-list">
                                        <% cancelationReson.forEach(reson=> { %>
                                            <div class="d-flex align-items-center justify-content-between mb-4">
                                                <div class="d-flex align-items-center">
                                                    <img src="imgs/people/avatar3.jpg" alt="" class="avatar">
                                                    <div>
                                                        <h6>
                                                            <%= reson.reason||"N/A" %>
                                                        </h6>
                                                        <p class="text-muted font-xs">
                                                            <%= reson.cancelationTime.toDateString()||'N/A' %>
                                                        </p>
                                                    </div>
                                                </div>

                                            </div>
                                            <% }) %>
                                    </div>
                                </article>
                            </div>
                        </div>

                       

                        <div class="col-lg-7">
                            <div class="card mb-4">
                                <article class="card-body">
                                    <h5 class="card-title">Top 10 Catogeries</h5>
                                    <ul class="verti-timeline list-unstyled font-sm">
                                        <% mostSaledCatogories.forEach(catagery=> { %>
                                            <li class="event-list">
                                                <div class="event-timeline-dot">
                                                    <a href="/admin/editProduct?id=<%= catagery._id %>"><i
                                                            class="material-icons md-play_circle_outline font-xxl"></i></a>
                                                </div>
                                                <div class="media">
                                                    <div class="me-3">
                                                        <h6><span>
                                                                <%= catagery.sales||0 %> sales
                                                            </span> <i
                                                                class="material-icons md-trending_flat text-brand ml-15 d-inline-block"></i>
                                                        </h6>
                                                    </div>
                                                    <div class="media-body">
                                                        <div>
                                                            <%= catagery.name||"N/A" %>
                                                        </div>
                                                    </div>
                                                </div>
                                            </li>
                                            <% }) %>

                                    </ul>
                                </article>
                            </div>
                        </div>


                        <div class="col-lg-5">
                            <div class="card mb-4">
                                <article class="card-body">
                                    <h5 class="card-title">New Members</h5>
                                    <div class="new-member-list">
                                        <% newusers.forEach(user=> { %>
                                            <div class="d-flex align-items-center justify-content-between mb-4">
                                                <div class="d-flex align-items-center">
                                                    <img src="imgs/people/avatar3.jpg" alt="" class="avatar">
                                                    <div>
                                                        <h6>
                                                            <%= user.name||"N/A" %>
                                                        </h6>
                                                        <p class="text-muted font-xs">
                                                            <%= user.email||'N/A' %>
                                                        </p>
                                                    </div>
                                                </div>

                                            </div>
                                            <% }) %>
                                    </div>
                                </article>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-xl-4 col-lg-12">
                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title">Revenue Each Months</h5>
                            <canvas id="myChart2" height="217"></canvas>
                        </article>

                    </div>
                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title">Revenue This Week</h5>
                            <canvas id="myChart3" height="217"></canvas>
                        </article>
                    </div>

                </div>
  <input type="hidden" id="monthlySales" value="<%= JSON.stringify(monthlySales||[]) %>">
        <input type="hidden" id="currentWeekSales" value="<%= JSON.stringify(currentWeekSales||[]) %>">
        <input type="hidden" id="monthlyproducts" value="<%= JSON.stringify(monthlyProductDetails||{}) %>">
