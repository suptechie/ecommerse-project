    <style>
        dialog::backdrop {
            background-color: rgba(0, 0, 0, 0.5);
        }

        .dialog {
            z-index: 1999;
            width: 320px;
            padding: 20px;
            background-color: #fff;
            border: none;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2);
        }

        .dialog label {
            display: block;
            margin-bottom: 6px;
            font-weight: bold;
        }

        .dialog input[type="text"],
        .dialog input[type="number"],
        .dialog input[type="date"] {
            width: calc(100% - 20px);
            margin-bottom: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .dialog button {
            margin-top: 10px;
            padding: 8px 16px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .dialog button.btn-secondary {
            background-color: #ccc;
            color: #fff;
        }

        .dialog button.btn-primary {
            background-color: #007bff;
            color: #fff;
        }

        .error {
            color: red;
            margin-top: 5px;
        }
    </style>
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
