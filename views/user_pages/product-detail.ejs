	<script>
		$(document).ready(function () {
			async function loadNoti() {
				try {
					const response = await $.ajax({
						url: '/add-to-cart',
						method: 'POST',
						data: $('#cartform').serialize()
					});
					const newNoti = $(response).find('.cart-noti').html();
					$('.cart-noti').html(newNoti);
				} catch (error) {
					console.error('Error in loadNoti:', error);
				}
			}

			$('.js-addcart-detail').each(function () {
				var nameProduct = $(this).closest('.p-lr-0-lg').find('.js-name-detail').text();

				$(this).on('click', async function (e) {
					e.preventDefault();
					try {
						await swal(nameProduct, 'is added to cart !', 'success');
						await loadNoti();
					} catch (error) {
						console.error('Error in click event handler:', error);
					}
				});
			});
		});
	</script>



