		<script>
			document.addEventListener("DOMContentLoaded", function () {
				const signupNameInput = document.querySelector('input[name="name"]');
				const signupNumberInput = document.querySelector('input[name="number"]');
				const signupUsernameInput = document.querySelector('input[name="username"]');
				const signupEmailInput = document.querySelector('input[name="email"]');
				const signupGenderInput = document.querySelector('select[name="gender"]');
				const signupPasswordInput = document.querySelector('input[id="signupPassword"]');
				const confirmPasswordInput = document.querySelector('input[name="confirmPassword"]');
				const signupErrorName = document.getElementById('errorname');
				const signupErrorNumber = document.getElementById('errornumber');
				const signupErrorUsername = document.getElementById('errorusername');
				const signupErrorEmail = document.getElementById('erroremail');
				const signupErrorGender = document.getElementById('errorgender');
				const signupErrorPassword = document.getElementById('errorpass');
				const signupErrorConfirmPassword = document.getElementById('errorconfirmPassword');

				function validateForm() {
					// Reset all error messages and styles
					resetErrors();

					// Validate Confirm Password
					var password = signupPasswordInput.value;
					var confirmPassword = confirmPasswordInput.value;

					if (password !== confirmPassword) {
						signupErrorConfirmPassword.style.display = "block";
						signupErrorConfirmPassword.textContent = "Passwords do not match!";
						return false;
					}

					// Validate Name
					if (!validateInput(signupNameInput, signupErrorName, "Name")) {
						return false;
					}

					// Validate Number
					if (!validateInput(signupNumberInput, signupErrorNumber, "Number")) {
						return false;
					}

					// Validate Username
					if (!validateInput(signupUsernameInput, signupErrorUsername, "Username")) {
						return false;
					}

					// Validate Email
					const enteredEmail = signupEmailInput.value;
					if (!validateInput(signupEmailInput, signupErrorEmail, "Email") || !isValidEmail(enteredEmail)) {
						return false;
					}

					// Validate Gender
					if (!validateInput(signupGenderInput, signupErrorGender, "Gender")) {
						return false;
					}

					// Validate Password
					const enteredPassword = signupPasswordInput.value;
					if (!validateInput(signupPasswordInput, signupErrorPassword, "Password") || !isValidPassword(enteredPassword)) {
						return false;
					}

					// All validations passed
					return true;
				}

				// Function to validate input against spaces
				function validateInput(inputElement, errorElement, fieldName) {
					const enteredValue = inputElement.value.trim();
					if (enteredValue === "") {
						errorElement.style.display = "block";
						errorElement.textContent = fieldName + " cannot be empty";
						inputElement.style.border = "1px solid red";
						return false;
					} else {
						errorElement.style.display = "none";
						inputElement.style.border = "";
						return true;
					}
				}

				// Function to validate email format
				function isValidEmail(email) {
					const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
					if (!emailRegex.test(email)) {
						signupErrorEmail.textContent = "Invalid email address format";
						signupErrorEmail.style.display = "block";
						signupEmailInput.style.border = "1px solid red";
						return false;
					} else {
						return true;
					}
				}

				// Function to validate password (replace with your logic) and space
				function isValidPassword(password) {
					return password.length >= 4; // Add your password validation logic here
				}

				// Function to reset all error messages and styles
				function resetErrors() {
					const errorElements = [
						signupErrorName, signupErrorNumber, signupErrorUsername,
						signupErrorEmail, signupErrorGender, signupErrorPassword,
						signupErrorConfirmPassword
					];

					errorElements.forEach(element => {
						element.textContent = "";
						element.style.display = "none";
					});

					const inputElements = [
						signupNameInput, signupNumberInput, signupUsernameInput,
						signupEmailInput, signupGenderInput, signupPasswordInput,
						confirmPasswordInput
					];

					inputElements.forEach(element => {
						element.style.border = "";
					});
				}

				// Hook into the form's onsubmit event
				const signupForm = document.querySelector('.login-form');
				signupForm.addEventListener("submit", function (event) {
					if (!validateForm()) {
						// Prevent form submission if validation fails
						event.preventDefault();
					}
				});
			});
		</script>


