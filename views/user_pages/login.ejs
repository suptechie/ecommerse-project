										<a href="/register" class="cpointer" style="font-size: 12px;">Sign Up</a>
									</small> &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;
									<small class="mtext-105 cl2 txt-center p-t-10">
										<small class="stext-111 cl2 plh3 size-116"
											style="margin-left: 3px;font-size:10px;margin-right: 0px;">Forgot Your
											Password?</small>
										<a href="/sendreset" class="cpointer" style="font-size: 12px;">Reset</a>
									</small>
						</form>

						<script>
							function validateForm() {
								var email = document.getElementById('email').value;
								var password = document.getElementById('password').value;

								// Check for spaces in email
								if (/\s/.test(email)) {
									document.getElementById('error').innerHTML = 'Email should not contain spaces.';
									document.getElementById('error').style.display = 'block';
									return false;
								}

								// Check for valid email format
								var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
								if (!emailRegex.test(email)) {
									document.getElementById('error').innerHTML = 'Invalid email format.';
									document.getElementById('error').style.display = 'block';
									return false;
								}

								// Check for minimum password length
								if (password.length < 4) {
									document.getElementById('errorpass').innerHTML = 'Password should be at least 4 characters long.';
									document.getElementById('errorpass').style.display = 'block';
									return false;
								}

								// If all validations pass, allow form submission
								return true;
							}
						</script>

