								<img class="how-pos4 pointer-none" src="images/icons/padlock.png" alt="Key Icon"
									style="width: 20px; height: 20px;">
							</div>

							<!-- Confirm Password -->
							<div class="bor8 m-b-20 how-pos4-parent">
								<input class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" type="password"
									id="confirmPassword" name="confirmPassword" placeholder="Confirm New Password">
								<img class="how-pos4 pointer-none" src="images/icons/padlock.png" alt="Key Icon"
									style="width: 20px; height: 20px;">
							</div>

							<button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer"
								id="verifyBtn">
								Confirm
							</button>
				</form>

				<script>
					document.addEventListener("DOMContentLoaded", function () {
						document.getElementById("verifyBtn").addEventListener("click", function (event) {
							// Reset error message
							document.getElementById("error").innerText = "";

							// Get the input values
							var password = document.getElementById("password").value.trim();
							var confirmPassword = document.getElementById("confirmPassword").value.trim();

							// Set a flag to indicate form validity
							var isValid = true;

							// Check if passwords match
							if (password !== confirmPassword) {
								document.getElementById("error").innerText = "Passwords do not match";
								document.getElementById("error").style.display = "block";
								isValid = false;
							}

							// Check if the password has at least 6 characters (you can adjust this number)
							if (password.length < 4) {
								document.getElementById("error").innerText = "Password should have at least 6 characters";
								document.getElementById("error").style.display = "block";
								isValid = false;
							}

							// Prevent form submission if the form is not valid
							if (!isValid) {
								event.preventDefault();
							}
						});
					});
				</script>



			</div>
